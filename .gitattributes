# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.rs text eol=lf
*.css text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.sh text eol=lf

# Scripts should have LF line endings
*.bash text eol=lf
*.fish text eol=lf
*.zsh text eol=lf

# Windows specific files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.icns binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.dmg binary
*.exe binary
*.msi binary

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.vscode export-ignore
.editorconfig export-ignore
*.md export-ignore
docs/ export-ignore

# Treat lock files as binary to prevent merge conflicts
pnpm-lock.yaml binary
package-lock.json binary
yarn.lock binary
Cargo.lock binary

# Language specific settings
*.rs linguist-language=Rust
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript

# Mark generated files
src-tauri/target/** linguist-generated=true
node_modules/** linguist-generated=true
dist/** linguist-generated=true
